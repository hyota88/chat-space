.side-bar
  .side-bar__header
    .side-bar__header__items
      %h3.side-bar__header__items__name
        =current_user.name
      .side-bar__header__items__icons
        = link_to new_group_path, class: "side-bar__header__items__icons" do
          = icon('far', 'edit',  class: "side-bar__header__items__icons--edit")
          %span<>
        = link_to edit_user_path(current_user), class: "side-bar__header__items__icons" do
          = icon('fas', 'cog', class: "side-bar__header__items__icons--con") 
  .side-bar__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group-name
            = group.name
          .group-info
